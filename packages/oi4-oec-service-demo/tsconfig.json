{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "dist",
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@oi4/oi4-oec-service-model": [
        "packages/oi4-oec-service-model"
      ],
      "@oi4/oi4-oec-service-node": [
        "packages/oi4-oec-service-node"
      ],
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
    "LICENSE",
    "README.md"
  ],
  "exclude": [
    "dist",
    "node_modules/**/*",
    "package.json"
  ]
}
