{
  "$id": "oi4Identifier.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Open Industry 4.0 Device Identifier",
  "type": "string",
  "$comment": "Length check is not done in the regex, it's done here. MinLength: 9 because of a.a/a/a/a",
  "pattern": "^(([a-z0-9-]+\\.)*([a-z0-9-]*)(?:/[^/`\\^\r\n]+){3})$",
  "minLength": 9,
  "maxLength": 255
}
