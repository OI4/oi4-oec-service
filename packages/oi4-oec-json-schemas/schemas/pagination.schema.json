{
  "$id": "pagination.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A representation of a pagination object",
  "type": "object",
  "additionalProperties": false,
  "required": ["perPage", "page"],
  "properties": {
    "totalCount": {
      "$ref": "uint32.schema.json"
    },
    "perPage": {
      "$ref": "uint32.schema.json"
    },
    "page": {
      "$ref": "uint32.schema.json"
    },
    "hasNext": {
      "type": "boolean"
    }
  }
}
