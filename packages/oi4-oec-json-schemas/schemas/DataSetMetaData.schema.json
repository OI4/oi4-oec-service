{
  "$id": "DataSetMetaData.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A representation of a metadata message",
  "type": "object",
  "additionalProperties": false,
  "$comment": "TODO: oi4identifier needs to be updated and implemented here",
  "required": [
    "DataSetWriterId",
    "MessageId",
    "MessageType",
    "PublisherId",
    "MetaData"
  ],
  "properties": {
    "CorrelationId": {
      "type": "string",
      "description": "Correlation ID used for logging and as debug information"
    },
    "DataSetWriterId": {
      "$ref": "dataTypes/uint16.schema.json"
    },
    "MessageId": {
      "type": "string",
      "description": "Message ID",
      "pattern": "^.{1,}-{oi4Identifier}"
    },
    "MetaData": {
      "$ref": "DataSetMetaDataType.schema.json"
    },
    "MessageType": {
      "type": "string",
      "enum": ["ua-metadata"],
      "description": "Message Type"
    },
    "PublisherId": {
      "type": "string",
      "description": "Publisher ID",
      "pattern": "{oi4Identifier}"
    }
  }
}
