{
  "$id": "license.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "License Schema",
  "type": "object",
  "required": ["components"],
  "additionalProperties": false,
  "properties": {
    "components": {
      "type": "array",
      "description": "Components Object",
      "items": {
        "$ref": "#/definitions/componentsObject"
      }
    }
  },
  "definitions": {
    "componentsObject": {
      "type": "object",
      "additionalProperties": false,
      "required": ["component"],
      "properties": {
        "component": {
          "description": "Library using this license",
          "type": "string"
        },
        "licAuthors": {
          "description": "License Authors",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "licAddText": {
          "description": "Additional license text",
          "type": "string"
        }
      }
    },
    "license": {
      "type": "object",
      "additionalProperties": false,
      "required": ["components", "licenseId"],
      "properties": {
        "components": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/componentsObject"
          }
        },
        "licenseId": {
          "description": "License Name",
          "type": "string"
        }
      }
    }
  }
}
