{
  "$id": "ServiceNetworkMessage.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A representation of an event",
  "type": "object",
  "additionalProperties": false,
  "$comment": "TODO: oi4identifier needs to be updated and implemented here. NetworkMessageBase was removed, if necessary, we can patch it back in",
  "allOf": [
    {
      "$ref": "NetworkMessageBase.schema.json"
    }
  ],
  "properties": {
    "Message": {
      "oneOf": [
        {
          "$ref": "ServiceParametersRequest.schema.json"
        },
        {
          "$ref": "ServiceParametersResponse.schema.json"
        }
      ]
    }
  },
  "required": [
    "MessageId",
    "MessageType",
    "PublisherId",
    "Messages"
  ]
}
