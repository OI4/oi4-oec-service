{
  "$id": "Config.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A representation of a config message",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "configDefinition": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "Name",
        "Type",
        "Value"
      ],
      "properties": {
        "Type": {
          "description": "",
          "type": "string",
          "readOnly": true,
          "enum": [
            "Boolean",
            "ByteString",
            "DateTime",
            "Number",
            "String"
          ]
        },
        "Value": {
          "description": "",
          "type": "string"
        },
        "Unit": {
          "description": "",
          "type": "string",
          "readOnly": true
        },
        "Validation": {
          "type": "object",
          "description": "",
          "minProperties": 1,
          "readOnly": true,
          "properties": {
            "Length": {
              "type": "number",
              "readOnly": true
            },
            "Min": {
              "type": "number",
              "readOnly": true
            },
            "Max": {
              "type": "number",
              "readOnly": true
            },
            "Pattern": {
              "type": "string",
              "readOnly": true
            },
            "Values": {
              "type": "array",
              "additionalItems": false,
              "uniqueItems": true,
              "readOnly": true,
              "items": {
                "type": "string"
              }
            }
          }
        },
        "DefaultValue": {
          "description": "",
          "readOnly": true,
          "type": "string"
        },
        "Mandatory": {
          "description": "",
          "readOnly": true,
          "default": false,
          "type": "boolean"
        },
        "Sensitive": {
          "description": "",
          "readOnly": true,
          "type": "boolean"
        },
        "Name": {
          "description": "",
          "$ref": "LocalizedText.schema.json",
          "readOnly": true
        },
        "Description": {
          "description": "",
          "$ref": "LocalizedText.schema.json",
          "readOnly": true
        }
      }
    },
    "groupConfig": {
      "type": "object",
      "minProperties": 2,
      "required": [
        "Nme"
      ],
      "additionalProperties": {
        "$ref": "LocalizedText.schema.json"
      },
      "patternProperties": {
        "^(?!name|description)[A-z][A-z0-9-_]*$": {
          "$ref": "#/definitions/configDefinition"
        }
      }
    }
  },
  "minProperties": 1,
  "patternProperties": {
    "^(?!\bcontext\b)[A-z_][A-z0-9-_]*$": {
      "$ref": "#/definitions/groupConfig"
    },
    "Context": {
      "type": "object",
      "additionalProperties": false,
      "required": ["Name"],
      "properties": {
        "Name": {
          "$ref": "LocalizedText.schema.json"
        },
        "Description": {
          "$ref": "LocalizedText.schema.json"
        }
      }
    }
  }
}
